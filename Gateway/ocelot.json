        {
          "Host": "localhost",
          "Port": 7289
        }
      ],
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/users/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7289
        }
      ],
